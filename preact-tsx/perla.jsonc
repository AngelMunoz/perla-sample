{
  "$schema": "https://raw.githubusercontent.com/AngelMunoz/Perla/v0.21.0/perla.schema.json",
  "index": "./index.html",
  "devServer": {
    "liveReload": true,
    "mountDirectories": {
      "./src": "/src"
    }
  },
  "build": {
    "jsxFactory": "h",
    "jsxFragment": "Fragment",
    "injects": [
      "./preact-shim.js"
    ]
  },
  "packages": {
    "preact": "https://cdn.skypack.dev/pin/preact@v10.7.1-CXcphf8iRlm3GJGwMcQa/mode=imports,min/optimized/preact.js"
  }
}